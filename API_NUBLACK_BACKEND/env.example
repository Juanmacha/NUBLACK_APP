# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================
NODE_ENV=development
PORT=3001
HOST=localhost

# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=NUblack
DB_USER=root
DB_PASSWORD=
DB_DIALECT=mysql
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =====================================================
# CONFIGURACIÓN JWT
# =====================================================
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=tu_refresh_secret_super_seguro_aqui
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# CONFIGURACIÓN NODEMAILER
# =====================================================
# Configuración SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password_aqui

# Configuración del remitente
EMAIL_FROM=NUblack <noreply@nublack.com>
EMAIL_FROM_NAME=NUblack

# URLs para enlaces en emails
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# CONFIGURACIÓN DE LOGS
# =====================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=5

# =====================================================
# CONFIGURACIÓN DE LA TIENDA
# =====================================================
STORE_NAME=NUblack
STORE_DESCRIPTION=Tienda de ropa y calzado deportivo
STORE_PHONE=3001234567
STORE_EMAIL=contacto@nublack.com
STORE_ADDRESS=Calle 123 #45-67, Bogotá

# Configuración de envíos
FREE_SHIPPING_MIN=200000
